<h1 class="productName"><%= @product.name %></h1>
<h2 class="productInventory"><%= @product.inventory %></h2>
<h3 class="productPrice"><%= @product.price %></h3>
<p class="productDescription"><%= @product.description %></p>

<a href="#" class="next-js" data-id="<%=@product.id%>">Next Product</a>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".next-js").on("click", function(e) {
    e.preventDefault()
    var nextId = parseInt($(".next-js").attr("data-id")) + 1;
    $.getJSON("/products/" + nextId + "/data", function(product) {
      $(".productName").text(product["name"]);
      $(".productInventory").text(product["inventory"]);
      $(".productPrice").text(product["price"]);
      $(".productDescription").text(product["description"]);
      // re-set the id to current on the link
      $(".next-js").attr("data-id", product["id"]);
    });
  });
});
</script>
