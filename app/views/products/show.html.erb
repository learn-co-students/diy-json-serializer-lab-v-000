<h2 class="productName"><%= @product.name %></h2>

<h3 class="productPrice">Price: <%= @product.price %></h3>

<h4 class="productInventory">Inventory: <%= @product.inventory %></h4>
<h5 class="productDescription">Description: </h5> <p> <%= @product.description %> </p> 

<a href="#" class="js-next" data-id="<%= @product.id%>">Next Product</a>


<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function() {
      var nextId = parseInt($(".js-next").attr("data-id")) + 1;
      $.getJSON("/products/" + nextId + "/data", function(response) {
        $(".productName").text(response["name"])
        $(".productPrice").text(response["price"])
        $(".productInventory").text(response["inventory"])
        $(".productDescription").text(response["description"])
        $("js-next").attr("data-id", response["id"])
      })
    })
  })
</script>

