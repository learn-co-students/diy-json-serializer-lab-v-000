<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a><br><br>
  <div class="productName"><%= @product.name %></div>
<ul>
  <li class="productInventory">Inventroy: <%= @product.inventory %></li>
  <li class="productDescription">Description: <%= @product.description %></li>
  <li class="productPrice">Price: $<%= @product.price.to_f %></li>
</ul>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.getJSON("/products/" + nextId + "/data", function(data) {
      $(".productName").text(data["name"]);
      $(".productInventory").text(data["inventory"]);
      $(".productDescription").text(data["description"]);
      $(".productPrice").text(data["price"]);

      $(".js-next").attr("data-id", data["id"]);
    });
  });
});
</script>
