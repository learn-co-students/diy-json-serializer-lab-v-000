<h1 class='prodName'><%= @product.name %></h1>
<a href="#" class='js-next' data-id='<%= @product.id %>'>Next Product</a>
<h2 class='prodDesc'><%= @product.description %></h2>
<h2 class='prodPrice'><%= @product.price %></h2>

<script>
  $(function(){
    $('.js-next').on('click', function(){
      var nextId = parseInt($('.js-next').attr('data-id')) + 1;
      $.get('/products/' + nextId + '/data', function(data){
        $('.prodName').text(data["name"]);
        $('.prodDesc').text(data["description"]);
        $('.prodPrice').text(data["price"]);
        $('.js-next').attr('data-id', data["id"]);
      });
    });
  });
</script>
