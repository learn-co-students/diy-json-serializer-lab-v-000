<div class="productName"><%= @product.name %></div>
<a href="#" class="js-next" data-id="<%=@product.id%>" name = "Next Product">Next Product</a>
<h1 class="productPrice"><%= @product.price %></h1>
<p class="productInventory"><%= @product.inventory.to_i %></p>
<p class="productDescription"><%= @product.description %></p>

<script type="text/javascript" charset="utf-8">
    $(function () {
        $(".js-next").on("click", function() {
            var nextId = parseInt($(".js-next").attr("data-id")) + 1;
            $.getJSON("/products/" + nextId + "/product_data", function(data) {
                $(".productName").text(data["name"]);
                $(".productDescription").text(data["description"]);
                $(".productInventory").text(data["inventory"]);
                $(".productPrice").text(data["price"]);
                // re-set the id to current on the link
                $(".js-next").attr("data-id", data["id"]);
            });
        });
    });
</script>