<h1 class="productName"><%= @product.name %></h1>
<p class="productBody">Description: <%= @product.description %></p>
<p class="productPrice">Price: $<%= @product.price %>.00</p>
<p class="productInventory">Inventory: <%= @product.inventory %></p>
<a href="#" class='js-next' data-id="<%=@product.id%>">Next Product</a>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function() {
      var nextId = parseInt($(".js-next").attr("data-id")) + 1;
      $.get("/products/" + nextId + "/data", function(data) {
        $(".productName").text(data["name"]);
        $(".productBody").text("Description: " + data["description"]);
        $(".productPrice").text("Price: " + data["price"]);
        $(".productInventory").text("Inventory: " + data["inventory"]);

        $(".js-next").attr("data-id", data["id"]);
      });
    });
  });
</script>
