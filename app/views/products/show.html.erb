<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>

<h1 class="productName"><%= @product.name %></h1>
<p class="productPrice"><%= @product.price %></p>
<p class="productBodyDesc"><%= @product.description %></p>
<p class="productBodyInv"><%= @product.inventory %></p>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function(ev) {
      ev.preventDefault();
      var nextId = parseInt($(".js-next").data("id")) + 1;
      console.log("nextId: "+nextId)
      $.getJSON("/products/" + nextId + "/product_data", function(data) {
          $(".productName").text(data["name"]);
          $(".productPrice").text(data["price"]);
          $(".productBodyDesc").text(data["description"]);
          $(".productBodyInv").text(data["inventory"]);
          // re-set the id to current on the link
          $(".js-next").data("id", nextId);
        });
    });
});
</script>
