<div class="productName"><%= @product.name%></div>
<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>
<p class="productDescription"><%= @product.description%></p>
<p class="productInventory">Inventory: <%= @product.inventory%></p>
<p class="productPrice">Price: <%= @product.price%></p>

<script type="text/javascript" charset="utf-8"> 
    $(function(){
        $(".js-next").on("click", function(){
            var nextId =parseInt($(this).data("id")) + 1
            $.get("/products/" + nextId + "/data", function(response){
                $(".productName").text(response.name)
                $(".js-next").attr("data-id", response.id)
                $(".productDescription").text(response.description)
                $(".productInventory").text(response.inventory)
                $(".productPrice").text(response.price)
            });
        });
    });

</script>