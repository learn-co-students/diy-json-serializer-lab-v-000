<h3 class="product-name"><%= @product.name %></h3>
<p class="product-description"><%= @product.description %></p>
<p class="product-inventory">Inventory: <%= @product.inventory.to_i %></p>
<p class="product-price">Price: <%= @product.price.to_i %></p>

<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/products/" + nextId + "/data", function(data) {
      $(".product-name").text(data["name"]);
      $(".product-description").text(data["description"]);
      $(".product-inventory").text(data["inventory"]);
      $(".product-price").text(data["price"]);
      // re-set the id to current on the link
      $(".js-next").attr("data-id", data["id"]);
    });
  });
});
</script>