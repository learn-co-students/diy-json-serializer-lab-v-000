<h1 class="productName"><%= @product.name %></h1>
<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>
<div class="productName"><%= @product.name %></div>
<div class="productDesc"><%= @product.description %></div>
<div class="productPrice"><%= @product.price %></div>
<div class="productInv"><%= @product.inventory %></div>


<script type="text/javascript">
  $(function() {
    $(".js-next").on("click", function(event) {
      event.preventDefault();
      var nextId = parseInt($('.js-next').attr("data-id")) + 1;

      $.get("/products/" + nextId + "/data", function(data) {
        // console.log(data)
        // data = JSON.parse(data);
        $(".productName").text(data["name"]);
        $(".productDesc").text(data["description"]);
        $(".productPrice").text(data["price"]);
        $(".productInv").text(data["inventory"]);
        $(".js-next").attr("data-id", data["id"]);
      });
    });
  });
</script>
