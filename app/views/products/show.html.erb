
<h2 class="productName"><%= @product.name %></h2>
<div class="productInventory"><%= @product.inventory %></div>
<div class="productDescription"><%= @product.description %></div>
<div class="productPrice"><%= @product.price.to_s %></div>
<a href="#" id="js-next" data-id="<%= @product.id %>">Next Product</a>



<script type="text/javascript" charset="utf-8">

  $("#js-next").on("click", function() {
    var nextId = parseInt($("#js-next").attr("data-id")) + 1;
    $.get("/products/" + nextId + "/data", function(data) {
      $(".productName").text(data["name"]);
      $(".productPrice").text(data["price"]);
      $(".productInventory").text(data["inventory"]);
      $(".productDescription").text(data["description"]);
      //re-set the id to current on the link
      $(".js-next").attr("data-id", data["id"]);
    });
  });

</script>