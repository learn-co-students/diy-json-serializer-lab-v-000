<h1 class="productName"><%= @product.name %></h1>
<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>
<h2 class="productDescription"><%= @product.description %></h2>

<script type="text/javascript">
  $(function(){
    $('.js-next').on('click', function(){
      var nextProductId = $(this).data("id") + 1
      $.get('/products/' + nextProductId + '/data', function(data){
        $('.productName').text(data['name']);
        $('.js-next').attr('data-id', nextProductId);
        $('.productDescription').text(data['description']);
      });
    });
  });
</script>
