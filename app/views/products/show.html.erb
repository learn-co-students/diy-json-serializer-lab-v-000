<h2 class="name"><%= @product.name %></h2>
<p class="price">$<%= @product.price %></p>
<p class="inventory"><%= @product.inventory %> in stock</p>
<p class="description"><%= @product.description %></p>

<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>


<script type="text/javascript">
  $(function(){
    $('.js-next').on('click', function(){
      var nextId = parseInt($('.js-next').attr('data-id')) + 1;
      $.get("/products/" + nextId + "/data", function(response){
        $('.name').text(response["name"]);
        $('.price').text("$" + response["price"]);
        $('.inventory').text(response["inventory"] + " in stock");
        $('.description').text(response["description"]);

        $('.js-next').attr('data-id', response["id"]);
      });
    });
  });
</script>