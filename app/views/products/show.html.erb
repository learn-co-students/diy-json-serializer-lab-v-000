<h1 class="productName" >Name: <%= @product.name %></h1>
<p class="productInventory" >Inventory: <%= @product.inventory %></p>
<p class="productPrice">Price: <%= @product.price %></p>
<p class="productDescription">Description: <%= @product.description %></p>
<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function() {
      var nextId = parseInt($(".js-next").attr("data-id")) + 1;
      $.getJSON("/products/" + nextId + "/data", function(data) {
        $(".productName").text("Name: " + data['name']);
        $(".productInventory").text("Inventory: " + data['inventory']);
        $(".productPrice").text("Price: " + data['price']);
        $(".productDescription").text("Description: " + data['description']);
        $(".js-next").attr("data-id", data["id"]);
      });
    });
  });
</script>
