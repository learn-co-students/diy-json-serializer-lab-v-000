<h1 class="productName"><%= @product.name %></h1>
<a href="#" class="js-next" data-id="<%=@product.id %>">Next Product</a><br>
Description: <p class="productDescription"><%= @product.description %></p>
Price: <p class="productPrice"><%= @product.price %></p>
Inventory: <p class="productInventory"><%= @product.inventory %></p>


<script type="text/javascript">
  $(function () {
    $('.js-next').click(function(){
      var nextId = parseInt($(this).attr("data-id")) + 1;
      $.get("/products/" + nextId + "/data", function(data) {
        var prod=data
        $('.productName').text(prod["name"])
        $('.productDescription').text(prod["description"])
        $('.productPrice').text(prod["price"])
        $('.productInventory').text(prod["inventory"])
        $('.js-next').attr('data-id', prod["id"])
      })
    })
  })



</script>