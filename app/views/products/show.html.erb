<div><h2 class="productName">Product: <%= @product.name %></h2</div>
<h2><a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a></h2>
<h3 class="productPrice">Price: <%= @product.price %></h3>
<h3 class="productInventory">Inventory: <%= @product.inventory%></h3>
<h3>Description:</h3>
<p class="productDescription"><%= @product.description %></p>

<script type="text/javascript" charset="utf-8">
$(function(){
    $(".js-next").on("click", function(){
        var nextId = parseInt($(".js-next").attr("data-id")) + 1;
        $.get("/products/" + nextId + "/data", function(data){
            $('.productPrice').text(data["price"]);
            $('.productName').text(data["name"]);
            $('.productInventory').text(data["inventory"]);
            $('.productDescription').text(data["description"]);
            $(".js-next").attr("data-id", data["id"]);
        });
    });
});
</script>