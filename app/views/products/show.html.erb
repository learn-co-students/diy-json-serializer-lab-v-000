<h1 class="product-name"><%= @product.name %></h1>
<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<p class=product-desc><%= @product.description %></p>
Price: <p class=product-price><%= @product.price %></p>
Inventory: <p class=product-inventory><%= @product.inventory %></p>

<script type="text/javascript" charset="utf-8">
$(function (){
  $("a.js-next").on("click", function(data){
    var id = parseInt($("a.js-next").attr("data-id")) +1
    $.get('/products/'+ id + '/data', function(data) {
        $(".product-name").text(data["name"]);
        $(".product-desc").text(data["description"]);
        $(".product-price").text(data["price"]);
        $(".product-inventory").text(data["inventory"]);
    })
  })
})

</script>
