<script type="text/javascript">
$(document).ready(function() {
  $('#get-next').on('click', function() {
    var nextId = parseInt($("#get-next").attr("data-id")) + 1;
    $.get("/products/" + nextId + "/data", function(data) {
      $(".product-name").text(data["name"]);
      $(".product-description").text(data["description"]);
      $("#get-next").attr("data-id", data["id"]);
  })
});
})

</script>

<h3 class="product-name">Name: <%=@product.name%><h3>
<h3 class="product-description">Description: <%=@product.description%></h3>
<a href="#" id="get-next" data-id="<%=@product.id%>">Next Product</a>
