<h1 class="name"><%= @product.name %></h1>
<div class="price">Price: <%= @product.price %></div>
<div class="inventory">Inventory:<%= @product.inventory %></div>
<div class="description">Description: <%= @product.description.to_s %></div>
<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function(){
      var nextId = parseInt($(".js-next").attr("data-id")) + 1

      $.ajax({
        url: "/products/" + nextId + "/data",
        success: function(data) {
          $(".name").text(data["name"]);
          $(".price").text(data["price"]);
          $(".invetory").text(data["inventory"]);
          $(".description").text(data["description"]);
          $(".js-next").attr("data-id", data["id"]);
        }
      });      
    });
  });
</script>
