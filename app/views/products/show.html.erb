<h1 id="product-name"><%=@product.name%></h1>
<p id="product-description"><%=@product.description%></p>
<ul>
  <li id="product-inventory">Inventory: <%=@product.inventory%></li>
  <li id="product-price">Price: <%=@product.price%></li>
</ul>
<a href="#" id="js-nextproduct" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript">
  $("#js-nextproduct").on("click", function(p){
    p.preventDefault()
    var nextID = parseInt($("#js-nextproduct").attr("data-id")) + 1
    $.getJSON("/products/"+nextID+"/data", function(data){
      $("#product-name").text(data["name"])
      $("#product-description").text(data["description"])
      $("#product-inventory").text("Inventory: "+data["inventory"])
      $("#product-price").text("Price: "+data["price"])
      $(".js-nextproduct").attr("data-id", nextID)
    })
  })
</script>
