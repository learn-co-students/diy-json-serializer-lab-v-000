<h1 class="name"><%= @product.name %></h1>
<h2 class="price"><%= @product.price %></h2>
<h3 class="inventory"><%= @product.inventory %></h3>
<h4 class="description"><%= @product.description %></h4>


<a href="#" class="js-next-product" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
  $(function () {

    $(".js-next-product").on('click', function () {
      console.log("here")
      var nextId = parseInt($(".js-next-product").attr("data-id")) + 1;
      console.log(nextId)
      $.getJSON("/products/" + nextId + "/data", function(data) {
        $(".name").text(data["name"]);
        $(".price").text(data["price"]);
        $(".inventory").text(data["inventory"]);
        $(".description").text(data["description"]);
        $(".js-next-product").attr("data-id", data["id"]);
      });
    event.preventDefault();
    });
  });
</script>
