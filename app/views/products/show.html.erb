<h1 class="productName"><%= @product.name %></h1>
<li class="productInventory"><%= @product.inventory %></li>
<li class="productPrice"><%= @product.price %></li>
<li class="productDescription"><%= @product.description %></li>
<a href="#" class="nextProduct" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset='utf-8'>
    $(".nextProduct").on("click", function() {
        var nextId = parseInt($(".nextProduct").attr("data-id")) + 1;
        $.get("/products/" + nextId + "/data", function(data) {
//            if (data)
//            data = JSON.parse(data)
//            debugger
            $(".productName").text(data["name"]);
            $(".productPrice").text(data["price"]);
            $(".productInventory").text(data["inventory"]);
            $(".productDescription").text(data["description"]);
            
            $(".nextProduct").attr("data-id", nextId);
        })
    })
</script>