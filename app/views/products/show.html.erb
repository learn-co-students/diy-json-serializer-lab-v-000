

<div class="productName"><%= @product.name %></div>
<a href="#" class="js-next" product-id="<%= @product.id %>" > Next Product </a>
<h1 class="productDescription"><%= @product.description %></h1>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextProduct = parseInt($(".js-next").attr("product-id")) + 1;
    $.get("/products/" + nextProduct + "/data", function(data) {
      $(".productName").text(data["name"]);
      $(".productDescription").text(data["description"]);
      $(".js-next").attr("product-id", data["id"]);
    });
  });
});
</script>

