<div>
  name: <p class='name'><%= @product.name %></p>
  Price: <p class='price'><%= @product.price %></p>
  Inventory: <p class='inventory'><%= @product.inventory %></p>
  Description: <p class='description'><%= @product.description %></p>
  <a href='#' class='js-next' data-id='<%= @product.id %>'>Next Product</a>
</div>

<script type='text/javascript' charset='utf-8'>
$(function(){
  $('.js-next').on('click', function(){
    let nextId = parseInt($('.js-next').attr('data-id')) + 1;
    $.getJSON(`/products/${nextId}/data`, function(data){
      $('.name').text(data["name"]);
      $('.price').text(data["price"]);
      $('.inventory').text(data["inventory"]);
      $('.description').text(data["description"]);
      $(".js-next").attr("data-id", data["id"]);
    })
  })
})
</script>