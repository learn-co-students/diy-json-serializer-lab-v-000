<div class="productName"><%= @product.name %></div>
<div class="productId"><%= @product.id %></div>
<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a><br>
Price: <div class="productPrice"><%= @product.price.to_s %></div>
Inventory: <div class="productInventory"><%= @product.inventory.to_s %></div>
<div class="productDescription"><%= @product.description %></div>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function() {
      var nextId = parseInt($(".js-next").attr("data-id")) + 1;
      $.get("/products/" + nextId + "/data", function(data) {
        $(".productName").text(data["name"]);
        $(".productId").text(data["id"]);
        $(".productPrice").text(data["price"]);
        $(".productInventory").text(data["inventory"]);
        $(".productDescription").text(data["description"]);
        $(".js-next").attr("data-id", data["id"]);
      });
    });
  });
</script>
