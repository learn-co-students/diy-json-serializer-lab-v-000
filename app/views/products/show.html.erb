<a class="js-next" href="#" data-id="<%= @product.id %>"> Next Product</a>
<br>
<br>
<div class="current_product">
  <%= ProductSerializer.serialize(@product) %>
</div>

<script type="text/javascript" charset="utf-8">
  $(function(){
    $(".js-next").on('click', function() {
      var nextId = parseInt($(".js-next").attr("data-id")) + 1
      $.getJSON("/products/" + nextId + "/data", function(data) {
        $(".current_product").text(data.name + data.description + data.inventory + data.price)
        $(".js-next").attr("data-id", data["id"]);
      })
    })
  })
</script>
