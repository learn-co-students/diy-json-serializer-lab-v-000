<div class="product-name"><%= @product.name %></div>
<div class="product-description"><%= @product.description %></div>
<div class="product-price"><%= @product.price %></div>
<div class="product-inventory"><%= @product.inventory %></div>
<a href="#" class="next-btn" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
$(function() {
  $(".next-btn").on("click", function(e) {
    e.preventDefault();
    var nextId = parseInt($(".next-btn").attr("data-id")) + 1;
    $.getJSON("/products/" + nextId + "/data", function(data) {
      $(".product-name").text(data["name"]);
      $(".product-description").text(data["description"]);
      $(".product-price").text(data["price"]);
      $(".product-inventory").text(data["inventory"]);
      $(".next-btn").attr("data-id", data["id"]);
    });
  });
});


</script>
