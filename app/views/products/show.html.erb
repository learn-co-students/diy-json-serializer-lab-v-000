

<div class="productName"><%=@product.name%></div>
<a class="js-next" href="#" data-id="<%=@product.id%>">Next Product</a>
<div class="productPrice"><%=@product.price%></div>
<div class="productInventory"><%=@product.inventory%></div>
<div class="productDescription"><%=@product.description%></div>

<script type="text/javascript" charset="utf-8">
	$(function() {
		$(".js-next").on("click", function() {
			let nextId = parseInt($(".js-next").attr("data-id")) + 1;
			$.getJSON(`/products/${nextId}/data`, function(response) {
				
				$(".productName").text(response["name"]);
				$(".productPrice").text(response["price"])
				$(".productInventory").text(response["inventory"]);
				$(".productDescription").text(response["description"]);
				$(".js-next").attr("data-id", response["id"]);

			})
		})
	})
	
</script>
