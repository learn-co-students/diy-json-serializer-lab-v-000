<h1 class="productName "><%= @product.name %></h1>
<h4 class="productPrice">$<%= @product.price %></h4>

<% if @product.inventory > 0 %>
  <strong class="productStatus">Available</strong><span class="productInventory"> ~ Remaining: <%= @product.inventory %></span>
<% else %>
  <strong class="productStatus">Sold Out</strong><span class="productInventory"></span>
<% end %>

<p class="productDescription"><%= @product.description %></p>

<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function () {
    var nextId = parseInt($(this).attr("data-id")) + 1;
    $.getJSON("/products/" + nextId + "/data", function(response) {
      $(".productName").text(response["name"]);
      $(".productPrice").text("$" + response["price"]);
      if (response["inventory"] > 0) {
        $(".productStatus").text("Available")
        $(".productInventory").text(" ~ Remaining: " + response["inventory"]);
      } else {
        $(".productStatus").text("Sold Out")
        $(".productInventory").text("");
      }
      $(".productDescription").text(response["description"]);
      $(".js-next").attr("data-id", response["id"]);
    });
  });
});
</script>
