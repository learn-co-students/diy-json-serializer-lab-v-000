<h3 class="productTitle"><%= @product.name %></h3>
<h3 class="productPrice">$<%= @product.price %></h3>
<p class="productBody"><%= @product.description %></p>
<p class="productInventory"><%= @product.inventory %> left</p>

<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
    $(function() {
        $(".js-next").on('click', function() {
            var nextId = parseInt($(".js-next").attr("data-id")) + 1;
            $.get('/products/' + nextId + '/data', function(data) {
                $(".productTitle").text(data["name"]);
                $(".productPrice").text(data["price"]);
                $(".productBody").text(data["description"]);
                $(".productInventory").text(data["inventory"]);
                $(".js-next").attr("data-id", data["id"]);
            });
        });
    });
</script>