<h1 class="name"><%= @product.name %></h1>
<h3 class="description"><%= @product.description if @product.description %></h3>
<h3 class="inventory"><%= @product.inventory if @product.inventory %></h3>
<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript">
$(function () {
	$(".js-next").on("click", function() {
		var nextId = parseInt($(".js-next").attr("data-id")) + 1;
		$.getJSON(nextId + "/data", function(data) {
		  $(".name").text(data["name"]);
	      $(".price").text(data["price"]);
	      $(".inventory").text(data["inventory"]);
	      $(".description").text(data["description"]);
	      // re-set the id to current on the link
	      $(".js-next").attr("data-id", data["id"]);
		});
	});
});
</script>

