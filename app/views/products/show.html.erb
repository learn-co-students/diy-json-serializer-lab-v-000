<div class="productName"> <%= @product.name %></div>
<p class="productDescription"> <%= @product.description %></p>
<p class="productPrice"> <%= @product.price %></p>
<p class="productInventory"><%= @product.inventory %></p>
<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/products/" + nextId + "/data", function(data) {
      var results = JSON.parse(data)
      $(".productName").text(results["name"]);
      $(".productDescription").text(results["description"]);
      $(".productInventory").text(results["inventory"]);
       $(".productPrice").text(results["price"]);
      // re-set the id to current on the link
      $(".js-next").attr("data-id", nextId);
    });
  });
});
</script>

