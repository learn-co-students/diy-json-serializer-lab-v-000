  <h3 class="name"><%= @product.name %></h3>
  <p class="description"><%= @product.description %></p>
</div>
<br><br>


<a href="#", class="js-next", class="js-next", data-id="<%= @product.id %>">Next Product</a>
<script type="text/javascript">
  $(function(){
    $(".js-next").on('click', function(){
      var id = parseInt($(".js-next").attr("data-id")) + 1
      $.get("/products/" + id + "/data", function(data) {
       var parsedData = $.parseJSON(data)
        $(".name").text(parsedData["name"])
        $(".description").text(parsedData["description"])
      })
    })
  })





</script>

