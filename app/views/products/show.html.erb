<h1 class="productName"><%= @product.name %></h1>
<p class="productDescription"><%= @product.description %></p>
<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
  $(function () {
  $(".js-next").on("click", function(e) {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.getJSON("/products/" + nextId + "/data", function(productData) {
      $(".productName").text(productData["name"]);
      $(".productDescription").text(productData["description"]);
      $(".js-next").attr("data-id", productData["id"]);
    });
    e.preventDefault();
    // return false;
  });
});
</script>
