<h1 class="productName"><%=@product.name%></h1>
<a href="#" class="js-next" data-id="<%=@product.id %>">Next Product</a>
<p class="productDescription"><%=@product.description%></p>
Price: <span class="productPrice"><%=@product.price%></span><br>
<span class="productInventory"><%= @product.inventory%></span> available


<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on('click', function() {
      var id = parseInt($(".js-next").attr("data-id")) + 1;
      $.get("/products/" + id + "/data", function(data) {
        $(".productName").text(data["name"]);
        $(".productDescription").text(data["description"]);
        $(".productPrice").text(parseInt(data["price"]));
        $(".productInventory").text(parseInt(data["inventory"]));
        $(".js-next").attr("data-id", data["id"]);
      });
    });
  });
</script>
