<h1 class="productName"><%= @product.name %></h1>
Price: <p class="productPrice"><%= @product.price %></p>
Inventory: <p class="productInventory"><%= @product.inventory %></p>
Description: <p class="productDescription"><%= @product.description %></p>
<a href="#" id="grab" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($("#grab").attr("data-id")) + 1;
    $.get("/products/" + nextId + "/data", function(data) {
      $(".productName").text(data["name"]);
      $(".productPrice").text(data["price"]);
      $(".productInventory").text(data["inventory"]);
      $(".productDescription").text(data["description"]);
      // re-set the id to current on the link
      $("#grab").attr("data-id", data["id"]);
    });
    event.preventDefault();
  });
});
</script>
